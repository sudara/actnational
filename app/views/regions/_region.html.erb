<nav>
  <ul>
    <li><%= link_to 'All', events_path %></li>
    <% @regions.each do |region| %>
    <li><%= link_to region.name, region %></li>
    <% end %>
  </ul>
</nav>
<h2>Events in <%= region.name %></h2>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Type of Event</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% region.future_events.each do |event| %>
    <tr>
      <td><%= event.start.to_formatted_s(:long) %></td>
      <td><%= link_to event.name, event %>
        <p><%= event.description %></p>
      </td>
      <td><%= event.category.name %></td>
      <td><%= event.topic.name %></td>
      <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>