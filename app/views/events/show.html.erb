<%= render "map" %>
<%= render "regions/nav" %>
<p id="notice"><%= notice.html_safe if notice %></p>

<h2><%= @event.name %></h2>

<div class="sidebar">
<%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@event.latitude},#{@event.longitude}&markers=#{@event.latitude},#{@event.longitude}&zoom=11&size=400x400&key=AIzaSyB8c_WNUuU6gusK-TV4asDjmLoZuVhq_ww",
              class: 'small-map', alt: "#{@event.city}"%>
</div>
<div>
  <p>
    <strong>Description:</strong>
    <%= markdown(@event.description) %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @event.category.name %>
  </p>

  <p>
    <strong>Topic:</strong>
    <%= @event.topic.name %>
  </p>

  <p>
    <strong>Start:</strong>
    <%= @event.start.to_formatted_s(:friendly) %>
  </p>

  <p>
    <strong>End:</strong>
    <%= @event.end.to_formatted_s(:friendly) if @event.end %>
  </p>

  <p>
    <strong>Organized by:</strong><br/>
    <%= @event.organizer %><br/>
    <%= @event.contact_email %>
    <%= @event.contact_phone %>
  </p>

  <p>
    <strong>Website:</strong>
    <%= link_to url_with_protocol(@event.website) if @event.website.present? %>
  </p>

  <p>
    <strong>Address:</strong><br/>
    <%= @event.address %><br/>
    <%= @event.city %>, <%= @event.state %>, <%= @event.zip %>
  </p>

  <p>
    <strong>Location details:</strong>
    <%= @event.location_details %>
  </p>
</div>

<% if creator? or admin?  %>
  <%= link_to 'EDIT', edit_event_path(@event) %> or 
  <%= link_to 'DELETE', @event, method: :delete, data: { confirm: 'Are you sure?' } %> this event.
<% end %>
